{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sanchopansa.io/schemas/arkham/skill.schema.json",
  "title": "Skill List Schema",
  "type": "array",
  "items": {
    "$ref": "#/definitions/Ally"
  },
  "definitions": {
    "Ally": {
      "type": "object",
      "title": "Instance of Ally",
      "description": "Ally JSON",
      "properties": {
        "name": {
          "type": "string"
        },
        "expansion": {
          "$ref": "Expansions.schema.json"
        },
        "stats": {
          "$ref": "Stats.schema.json"
        },
        "active": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "phase": {
              "$ref": "Phases.schema.json"
            }
          },
          "required": [
            "description",
            "phase"
          ]
        },
        "passive": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "expansion",
        "stats"
      ]
    }

  }
}
