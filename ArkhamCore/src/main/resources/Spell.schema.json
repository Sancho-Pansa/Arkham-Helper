{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sanchopansa.io/schemas/arkham/spell.schema.json",
  "title": "Spell List Schema",
  "type": "array",
  "items": {
    "$ref": "#/definitions/Spell"
  },
  "definitions": {
    "Spell": {
      "type": "object",
      "title": "Instance of Spell",
      "description": "Spell JSON",
      "properties": {
        "name": {
          "type": "string"
        },
        "expansion": {
          "$ref": "Expansions.schema.json"
        },
        "modifier": {
          "type": "integer"
        },
        "sanityCost": {
          "type": "integer"
        },
        "hands": {
          "type": "integer",
          "enum": [0, 1, 2]
        },
        "active": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "phase": {
              "$ref": "Phases.schema.json"
            }
          },
          "required": [
            "description",
            "phase"
          ]
        },
        "count": {
          "type": "integer"
        }
      },
      "required": [
        "name",
        "expansion",
        "modifier",
        "sanityCost",
        "hands",
        "count"
      ]
    }

  }
}
