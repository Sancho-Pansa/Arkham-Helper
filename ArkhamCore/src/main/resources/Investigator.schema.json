{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for Investigator JSON",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "title": {
        "type": "string"
      },
      "expansion": {
        "type": "string",
        "enum": [
          "Ужас Аркхэма",
          "Ужас Данвича",
          "Ужас Иннсмута",
          "Ужас Кингспорта"
        ]
      },
      "location": {
        "type": "string"
      },
      "stamina": {
        "type": "integer"
      },
      "sanity": {
        "type": "integer"
      },
      "ability": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "phase": {
            "type": "string",
            "enum": [
              "ANY",
              "UPKEEP",
              "MOVEMENT",
              "ARKHAM_ENCOUNTER",
              "OTHER_WORLD_ENCOUNTER",
              "MYTHOS"
            ]
          }
        },
        "required": [
          "name",
          "description"
        ]
      },
      "possessions": {
        "type": "object",
        "properties": {
          "money": {
            "type": "integer"
          },
          "clues": {
            "type": "integer"
          },
          "commons": {
            "type": "object",
            "properties": {
              "random": {
                "type": "integer"
              },
              "fixed": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "random",
              "fixed"
            ]
          },
          "uniques": {
            "type": "object",
            "properties": {
              "random": {
                "type": "integer"
              },
              "fixed": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "random",
              "fixed"
            ]
          },
          "spells": {
            "type": "object",
            "properties": {
              "random": {
                "type": "integer"
              },
              "fixed": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "random",
              "fixed"
            ]
          },
          "skills": {
            "type": "object",
            "properties": {
              "random": {
                "type": "integer"
              },
              "fixed": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "random",
              "fixed"
            ]
          },
          "allies": {
            "type": "object",
            "properties": {
              "random": {
                "type": "integer"
              },
              "fixed": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "random",
              "fixed"
            ]
          }
        },
        "required": [
          "money",
          "clues"
        ]
      },
      "focus": {
        "type": "integer"
      },
      "minSpeed": {
        "type": "integer"
      },
      "maxSneak": {
        "type": "integer"
      },
      "minFight": {
        "type": "integer"
      },
      "maxWill": {
        "type": "integer"
      },
      "minLore": {
        "type": "integer"
      },
      "maxLuck": {
        "type": "integer"
      },
      "blessing": {
        "type": "integer",
        "enum": [-1, 0, 1]
      },
      "retainer": {
        "type": "boolean"
      },
      "cultist": {
        "type": "boolean"
      },
      "sheriff": {
        "type": "boolean"
      },
      "loan": {
        "type": "boolean"
      },
      "monsters": {
        "type": "number"
      },
      "gates": {
        "type": "number"
      },
      "story": {
        "type": "string"
      }
    },
    "required": [
      "name",
      "expansion",
      "location",
      "title",
      "stamina",
      "sanity",
      "ability",
      "possessions",
      "focus",
      "minSpeed",
      "maxSneak",
      "minFight",
      "maxWill",
      "minLore",
      "maxLuck"
    ]
  }
}